
<%if user_signed_in? && current_user.id == article.user_id %>
  <%= link_to edit_user_article_path(article, current_user), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-pencil"></span> Edit
    <% end %>
  <%= link_to article, method: :delete, class: 'btn btn-default', data: { confirm: 'Really delete this article?' } do %>
    <span class="glyphicon glyphicon-remove"></span>
  <% end %>
<% end %>
