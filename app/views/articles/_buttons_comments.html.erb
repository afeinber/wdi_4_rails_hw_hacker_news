
<% if !user_signed_in? || !current_user.likeable_like(comment).present?  %>
  <%= link_to(comment_likes_path(comment, is_upvote: true), method: :post, class: 'btn btn-default') do %>

    <span class="glyphicon glyphicon-thumbs-up"></span>
  <% end%>

  <%= link_to(comment_likes_path(comment, is_upvote: false), method: :post,  class: 'btn btn-default') do %>
    <span class="glyphicon glyphicon-thumbs-down"></span>
  <%end%>
<% elsif current_user.likeable_like(comment).is_upvote %>
    <%= link_to(comment_like_path(comment, current_user.likeable_like(comment)), method: :delete, class: 'btn btn-success') do %>

    <span class="glyphicon glyphicon-thumbs-up"></span>
  <% end%>

  <%= link_to(comment_likes_path(comment, is_upvote: false), method: :post,  class: 'btn btn-default') do %>
    <span class="glyphicon glyphicon-thumbs-down"></span>
  <%end%>
<% else %>
    <%= link_to(comment_likes_path(comment, is_upvote: true), method: :post, class: 'btn btn-default') do %>

    <span class="glyphicon glyphicon-thumbs-up"></span>
  <% end%>

  <%= link_to(comment_like_path(comment, current_user.likeable_like(comment)), method: :delete,  class: 'btn btn-danger') do %>
    <span class="glyphicon glyphicon-thumbs-down"></span>
  <%end%>


<% end %>
